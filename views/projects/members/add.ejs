<% include ../../partials/header %>
<% include ../../partials/sidebar %>



<div class="col-10">
    <div class="jumbotron mt-3">
        <h1><b>Add Members</b></h1>
        <hr>

        <div>
            <form action="" method="POST">

                <div class="row">
                    <legend class="col-form-label col-sm-2 pt-0">Name</legend>
                    <div class="col-sm-10">
                        <% if(data2.length > 0){
                                 for(let i=0; i<data2.length; i++){%>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="user" id="check1"
                                value="<%= data2[i].userid %>">
                            <label class="form-check-label" for="check1">
                                <%= data2[i].fullname%>
                            </label>
                        </div>
                        <%} }else {%>
                        <div>
                            <h2>
                                Maaf Stok user telah habis
                            </h2>
                        </div>
                        <%}%>
                           </div>
                  </div><br>
                  <hr>
         

            <div class="row">
                <legend class="col-form-label col-sm-2 pt-0">Position</legend>
                <div class="col-sm-10">
                    <% role.forEach((item,i)=>{%>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" id="check1"
                                value="<%= item.position %>">
                            <label class="form-check-label" for="check1">
                                <%= item.position %>
                            </label>
                        </div>
                        <% })%>
                    </div>
                </div><br>

                <button class="btn btn-outline-primary" type="submit">Save</button>
                <a href="/projects/members/<%= id %>" class="btn btn-outline-warning">Cancel</a>
            </form>
        </div>
    </div>
</div>
</br></br></br>

<% include ../../partials/footer %>