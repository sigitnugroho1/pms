<% include ../../partials/header %>
<% include ../../partials/sidebar %>


<div class="col-10">
    <div class="jumbotron mt-3">
        <div class="container">
            <h1>Edit Members</h1>
            <hr>
            <div>
                <form action="" method="POST">
                    <div class="form-group row">
                        <label for="id" class="col-sm-2 form-check-label">Id</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="id" name="id" placeholder="Id"
                                value="<%= data.id %>" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="name" class="col-sm-2 form-check-label">Name</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="name" name="name" placeholder="name"
                                value="<%= data.firstname %>" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="position" class="col-sm-2 form-check-label">Position</label>
                        <div class="col-sm-9">
                            <select name="member" name="member" class="form-control">
                                <option value="<%= data.role %>">
                                    <%= data.role %>
                                </option>
                                <% for(let i=0; i<data2.length; i++){ %>
                                <option value="<%= data2[i].position%>">
                                    <%= data2[i].position %>
                                </option>
                                <%}%>
                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
                <a href="/projects/members/<%= id %>" class="btn btn-warning">Cancel</a>
                </form>


            </div>
        </div>
    </div>
    </br></br></br>



