<% include ../partials/header %>

<div class="container" style=" margin-top: 20px ">
    <div class="jumbotron mt-5">
        <form action="" method="POST">
            <h1><b>Add Project</b></h1>
            <div class="form-group row" style=" margin-top: 20px ">
                <label for="inputtext" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="inputname" name="name" placeholder="Project Name">
                </div>
            </div>


            <div class="form-group row">
                <legend class="col-form-label col-sm-2 pt-0">Members</legend>
                <div class="col-sm-10">
                    <% data.forEach((item) => { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="members" id="member-<%= item.userid %>"
                            value="<%= item.userid %>">
                        <label class="form-check-label" for="member-<%= item.userid %>">
                            <%= item.firstname%> <%=item.lastname %>
                        </label>
                    </div>
                    <%  }) %>
                </div>
            </div>

            <br><br>
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/projects" class="btn btn-warning">Cancel</a>
        </form>
    </div>
</div>


<% include ../partials/footer %>